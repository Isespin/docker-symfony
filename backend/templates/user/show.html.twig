{% extends 'base.html.twig' %}

{% block title %}Usuario{% endblock %}

{% block body %}
    <h1>Usuario</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Usuario</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Contrase√±a (encriptada)</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Administrador</th>
                <td>{{ user.administrador ? 'Si' : 'No' }}</td>
            </tr>
            <tr>
                <th>Lector</th>
                <td>{{ user.lector ? 'Si' : 'No' }}</td>
            </tr>
            <tr>
                <th>Cliente</th>
                <td>{{ user.cliente ? 'Si' : 'No' }}</td>
            </tr>
            <tr>
                <th>Redactor</th>
                <td>{{ user.redactor ? 'Si' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}" class="btn btn-primary">Volver al listado</a>
    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_REDACTOR') %}
      <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary">Editar usuario</a>
    {% endif %}
    {% if is_granted('ROLE_ADMIN') %}
      {{ include('user/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
